@model IEnumerable<MovieWithRatingsViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Filtered Movie List</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
        }

        .header {
            position: fixed;
            width: 100%;
            height: 60px;
            background-color: #4a90e2;
            color: white;
            display: flex;
            align-items: center;
            padding: 0 20px;
            z-index: 1000;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

            .header h1 {
                margin: 0;
                font-size: 1.5rem;
                flex-grow: 1;
            }

            .header nav {
                display: flex;
                gap: 15px;
            }

                .header nav a {
                    color: white;
                    text-decoration: none;
                    font-size: 1rem;
                }

                    .header nav a:hover {
                        color: #f5a623;
                    }

        .main-container {
            display: flex;
            margin-top: 60px;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
        }

        .filter-container {
            width: 280px;
            padding: 20px;
            background-color: #f1f1f1;
            border-right: 1px solid #ddd;
            height: calc(100vh - 60px);
            overflow-y: auto;
            box-shadow: 2px 0 6px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            border-radius: 8px;
        }

            .filter-container h2 {
                font-size: 1.2rem;
                color: #34495e;
                margin-bottom: 15px;
            }

            .filter-container input,
            .filter-container select {
                width: 100%;
                padding: 8px;
                margin-bottom: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 1rem;
            }

        .content-container {
            flex: 1;
            margin-left: 20px;
            padding: 20px;
        }

        .movie-details {
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
            transition: transform 0.2s;
        }

            .movie-details:hover {
                transform: scale(1.02);
            }

            .movie-details h2 {
                font-size: 1.5rem;
                color: #2c3e50;
                margin-bottom: 10px;
            }

            .movie-details p {
                margin: 5px 0;
                color: #7f8c8d;
            }

        .pagination-controls {
            text-align: center;
            margin-top: 20px;
        }

            .pagination-controls a {
                margin: 0 10px;
                padding: 5px 10px;
                border: 1px solid #ddd;
                border-radius: 5px;
                text-decoration: none;
                color: #3498db;
            }

                .pagination-controls a:hover {
                    background-color: #ddd;
                }

            .pagination-controls span {
                margin: 0 10px;
                padding: 5px 10px;
            }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <h1>IndependentProject</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/Home/Filter">Filter</a>
            <a href="/Home/Privacy">Privacy</a>
        </nav>
    </div>

    <div class="main-container">
        <!-- Filters Sidebar -->
        <div class="filter-container">
            <h2>Filters</h2>
            <input type="text" id="searchInput" placeholder="Search by title" class="form-control mb-3" onkeyup="applyFilters()" />
            <select id="typeFilter" class="form-control mb-3" onchange="applyFilters()">
                <option value="">All Types</option>
                @foreach (var type in ViewBag.Types)
                {
                    <option value="@type">@type</option>
                }
            </select>
            <select id="yearFilter" class="form-control mb-3" onchange="applyFilters()">
                <option value="">All Years</option>
                @foreach (var year in ViewBag.Years)
                {
                    <option value="@year">@year</option>
                }
            </select>
            <select id="ratingFilter" class="form-control mb-3" onchange="applyFilters()">
                <option value="">All Ratings</option>
                @foreach (var rating in ViewBag.Ratings)
                {
                    <option value="@rating">@rating</option>
                }
            </select>
        </div>

        <!-- Movies Content -->
        <div class="content-container">
            <h1>Filtered Movie List</h1>
            @if (!Model.Any())
            {
                <p>No movies found.</p>
            }
            else
            {
                @foreach (var item in Model)
                {
                    var movie = item.Movie;
                    <div class="movie-details">
                        <h2>@movie.Title (@movie.ReleaseYear)</h2>
                        <p><strong>Type:</strong> @movie.Type</p>
                        <p><strong>Rating:</strong> @movie.Rating</p>
                        <p><strong>Director:</strong> @movie.Director</p>
                    </div>
                }

                <!-- Pagination Controls -->
                <div class="pagination-controls">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <a href="@Url.Action("Filter", new { page = ViewBag.CurrentPage - 1 })">Previous</a>
                    }
                    <span>Page @ViewBag.CurrentPage of @ViewBag.TotalPages</span>
                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <a href="@Url.Action("Filter", new { page = ViewBag.CurrentPage + 1 })">Next</a>
                    }
                </div>
            }
        </div>
    </div>

    <script>
        function applyFilters() {
            const searchTitle = document.getElementById("searchInput").value;
            const selectedType = document.getElementById("typeFilter").value;
            const selectedYear = document.getElementById("yearFilter").value;
            const selectedRating = document.getElementById("ratingFilter").value;

            const query = `?searchTitle=${encodeURIComponent(searchTitle)}&type=${encodeURIComponent(selectedType)}&year=${encodeURIComponent(selectedYear)}&rating=${encodeURIComponent(selectedRating)}`;
                    window.location.href = "/Home/Filter" + query;
                }
    </script>
</body>
</html>
