@model Review

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Review</title>
</head>
<body>

    <h1>Add Review</h1>
    <form asp-action="Create" method="post">
        <input type="hidden" name="MovieId" value="@ViewBag.MovieId" />

        <label for="rating">Rating (0-10):</label>
        <input type="number" id="rating" name="Rating" min="0" max="10" step="0.5" required />

        <label for="recommend">Would you recommend this movie?</label>
        <select id="recommend" name="Recommend">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>

        <label for="description">Description:</label>
        <textarea id="description" name="Description" rows="4" cols="50" required></textarea>

        <button type="submit">Submit Review</button>
    </form>

    <a href="@Url.Action("Index", "Home")">Back to Movie List</a>
</body>
</html>
