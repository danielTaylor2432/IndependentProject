@model Ratings
<style>
    .star-rating {
        display: flex;
        flex-direction: row-reverse; /* Reverse the order for the hover effect to work correctly */
        justify-content: flex-start;
    }

        .star-rating input[type="radio"] {
            display: none; /* Hide the radio buttons */
        }

        .star-rating label {
            font-size: 30px; /* Size of the stars */
            color: lightgray; /* Default color of the stars */
            cursor: pointer;
        }

            /* Hover effect - color stars up to the hovered one */
            .star-rating label:hover,
            .star-rating label:hover ~ label {
                color: gold;
            }

        /* Checked effect - color stars up to the checked one */
        .star-rating input[type="radio"]:checked ~ label {
            color: gold;
        }

</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<h2>Add a Review</h2>

<div class="star-rating">
    <input type="radio" id="star5" name="rating" value="5" @(Model.Rating == 5 ? "checked" : "") />
    <label for="star5" class="fa fa-star"></label>

    <input type="radio" id="star4" name="rating" value="4" @(Model.Rating == 4 ? "checked" : "") />
    <label for="star4" class="fa fa-star"></label>

    <input type="radio" id="star3" name="rating" value="3" @(Model.Rating == 3 ? "checked" : "") />
    <label for="star3" class="fa fa-star"></label>

    <input type="radio" id="star2" name="rating" value="2" @(Model.Rating == 2 ? "checked" : "") />
    <label for="star2" class="fa fa-star"></label>

    <input type="radio" id="star1" name="rating" value="1" @(Model.Rating == 1 ? "checked" : "") />
    <label for="star1" class="fa fa-star"></label>
</div>
<form asp-action="Create" method="post">
    <!-- Hidden field for RatingID, if necessary -->

    <input type="hidden" name="ratingID" value="@Model.RatingID" />

    <!-- Hidden field for ShowId -->
    <input type="hidden" name="showId" value="@Model.ShowId" />

    <div>
        <label for="userId">UserName:</label>
        <input name="userId" type="text" value="@Model.UserId" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div>
        <label for="recommend">Recommend (Yes/No or other):</label>
        <input name="recommend" type="text" value="@Model.Recommend" />
        <span asp-validation-for="Recommend" class="text-danger"></span>
    </div>

    <div>
        <label for="description">Description:</label>
        <textarea name="description">@Model.Description</textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit">Submit Review</button>
</form>
