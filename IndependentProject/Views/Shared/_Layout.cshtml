<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IndependentProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IndependentProject.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f9f9f9; /* Lighter background */
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: #4a90e2; /* Blue header background */
            color: white; /* White text in header */
        }

        .navbar {
            border-bottom: 2px solid #f5a623; /* Dusted orange bottom border */
        }

        .navbar-nav .nav-link {
            color: white; /* White links in navbar */
        }

            .navbar-nav .nav-link:hover {
                color: #f5a623; /* Change to dusted orange on hover */
            }

        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            width: 200px;
            padding: 20px;
            background-color: #2c3e50; /* Dark blue background */
            color: white;
            overflow-y: auto;
        }

        .sidebar-left {
            left: 0;
        }

        .sidebar-right {
            right: 0;
        }

        .sidebar a {
            color: #f5a623; /* Dusted orange links */
            text-decoration: none;
            display: block;
            margin-bottom: 10px;
        }

            .sidebar a:hover {
                color: #f9f9f9; /* Light color on hover */
            }

        /* Adjust main content to have space for the sidebars */
        .content-container {
            margin-left: 220px; /* Adjusted to the width of the left sidebar */
            margin-right: 220px; /* Adjusted to the width of the right sidebar */
            padding: 20px;
            flex: 1;
        }

        footer {
            background-color: #4a90e2; /* Blue footer background */
            color: white; /* White text in footer */
            padding: 10px 0;
        }

            footer a {
                color: #f5a623; /* Dusted orange links in footer */
            }

                footer a:hover {
                    color: white; /* Change to white on hover */
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">IndependentProject</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Area -->
    <div class="content-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - IndependentProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
