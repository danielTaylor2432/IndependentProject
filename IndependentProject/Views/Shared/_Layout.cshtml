<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ratingly</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IndependentProject.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f9f9f9;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: #34495e; /* Darker shade for header */
            color: white;
        }

        .navbar {
            border-bottom: 3px solid #e67e22; /* Stronger orange underline */
            padding: 15px 20px;
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: bold;
            letter-spacing: 2px;
            color: #f5a623; /* Orange color for branding */
        }

        .navbar-nav .nav-link {
            font-size: 1.3rem;
            font-weight: 500;
            color: white;
            margin: 0 15px;
            transition: color 0.3s ease-in-out;
        }

            .navbar-nav .nav-link:hover {
                color: #f5a623; /* Orange hover effect */
            }

        .navbar-collapse {
            justify-content: space-evenly; /* Space out nav items */
        }

        .content-container {
            padding: 20px;
            flex: 1;
        }

        footer {
            background-color: #34495e;
            color: white;
            padding: 5px 0;
            text-align: center;
            font-size: 1rem;
        }

            footer a {
                color: #f5a623;
                font-weight: bold;
            }

                footer a:hover {
                    color: white;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Ratingly</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <!-- Link to Home Page -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <!-- Link to Filter Page -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Filter", "Home")">Filter</a>
                        </li>
                        <!-- Link to Privacy Page -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Privacy", "Home")">Privacy</a>
                        </li>
                        <!-- Link to New Titles Page -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("newTitles", "Home")">Newest Titles</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Area -->
    <div class="content-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - IndependentProject - <a href="@Url.Action("Privacy", "Home")">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
